---
// SkillCard component for skills section
export interface Props {
  name: string;
  level: string;
  experience: string;
  category: 'expert' | 'advanced' | 'intermediate';
}

const { name, level, experience, category } = Astro.props;

const getLevelColor = (category: string) => {
  switch (category) {
    case 'expert':
      return 'bg-green-100 text-green-800';
    case 'advanced':
      return 'bg-blue-100 text-blue-800';
    case 'intermediate':
      return 'bg-yellow-100 text-yellow-800';
    default:
      return 'bg-gray-100 text-gray-800';
  }
};
---
<div class="bg-white border border-gray-200 rounded-lg p-6 hover:border-gray-300 transition-colors duration-300">
  <div class="flex items-start justify-between mb-4">
    <h3 class="text-lg font-semibold text-dark-navy">{name}</h3>
    <span class="text-sm font-medium text-gray-600">{experience}</span>
  </div>

  <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${getLevelColor(category)}`}>
    {level}
  </span>
</div>